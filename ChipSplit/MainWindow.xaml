            <TextBlock x:Name="textName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="NAME" VerticalAlignment="Top" Height="26" FontSize="14.667" Margin="286,54,0,0"/>
            <TextBox x:Name="textBoxName" Controls:TextBoxHelper.Watermark="Process name" HorizontalAlignment="Left" Height="23" Margin="332,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Name}" TextChanged="textBoxName_TextChanged"/>

            <TextBlock x:Name="textPath" HorizontalAlignment="Left" Margin="293,85,0,0" TextWrapping="Wrap" Text="PATH" VerticalAlignment="Top" Height="26" FontSize="14.667"/>
            <TextBlock x:Name="textArgs" HorizontalAlignment="Left" Margin="291,116,0,0" TextWrapping="Wrap" Text="ARGS" VerticalAlignment="Top" Height="26" FontSize="14.667"/>



            <TextBox x:Name="textBoxPath" Controls:TextBoxHelper.Watermark="C:\Program Files\" HorizontalAlignment="Left" Height="23" Margin="332,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="textBoxArgs" HorizontalAlignment="Left" Height="23" Margin="332,116,0,0" TextWrapping="Wrap" Text="args" VerticalAlignment="Top" Width="120"/>

            <TextBlock x:Name="textWindowRes" HorizontalAlignment="Left" Margin="303,147,0,0" TextWrapping="Wrap" Text="RES" VerticalAlignment="Top" Height="26" FontSize="14.667"/>
            <TextBox x:Name="textBoxWindowX" HorizontalAlignment="Left" Height="23" Margin="332,147,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" Width="60"/>
            <TextBox x:Name="textBoxWindowY" HorizontalAlignment="Left" Height="23" Margin="392,147,0,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top" Width="60"/>

            <ListBox x:Name="listboxNumbersDummy" HorizontalAlignment="Left" Height="163" Margin="10,68,0,0" VerticalAlignment="Top" Width="20" IsSynchronizedWithCurrentItem="False">
                <ListBoxItem Content="1" />
                <ListBoxItem Content="2" />
                <ListBoxItem Content="3" />
                <ListBoxItem Content="4" />
            </ListBox>
    </Grid>

    <Controls:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>

            <Button x:Name="buttonMenuBarNew">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20"
							   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
										 Visual="{StaticResource appbar_add}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
							   VerticalAlignment="Center"
							   Text="New" />
                </StackPanel>
            </Button>

            <Button x:Name="buttonMenuBarOpen">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20"
							   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
										 Visual="{StaticResource appbar_folder}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
							   VerticalAlignment="Center"
							   Text="Open" />
                </StackPanel>
            </Button>

            <Button x:Name="buttonMenuBarSave">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20"
							   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill"
										 Visual="{StaticResource appbar_save}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
							   VerticalAlignment="Center"
							   Text="Save" />
                </StackPanel>
            </Button>



